  public_configs = [ ":config" ]

  include_dirs = [ "include" ]

  public_deps = [
    ":evse-common",
    "${chip_root}/examples/energy-management/device-energy-management:energy-management",
    "${chip_root}/examples/energy-management/electrical-sensor:energy-management",
    "${chip_root}/src/app",
    "${chip_root}/src/app/clusters/energy-evse-server",
    "${chip_root}/src/lib/core",
    "${chip_root}/src/protocols/interaction_model",
    "${chip_root}/src/system",
  ]
}
